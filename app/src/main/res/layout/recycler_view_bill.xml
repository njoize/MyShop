<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Picture-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_action_logout" />

                <!--Receipts Channel-->
                <TextView
                    android:id="@+id/txtChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="หน้าร้าน"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold" />

                <!--Receipts Method-->
                <TextView
                    android:id="@+id/txtMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="เงินสด"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!--Content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtDetail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 2"
                    android:textSize="@dimen/h3"
                    android:textStyle="normal" />

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="58dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd" />

</LinearLayout>