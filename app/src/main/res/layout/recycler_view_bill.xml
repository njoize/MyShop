<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Picture-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/imvChannel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/channal_0" />

                <!--Receipts Channel-->
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="หน้าร้าน"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold" />


            </RelativeLayout>

            <!--Content-->
            <LinearLayout
                android:layout_marginRight="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtDetail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 2"
                    android:textSize="@dimen/h3"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtDetail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 3"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/h3"
                    android:textStyle="normal" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!--Receipts Method-->
            <TextView
                android:layout_gravity="right"
                android:id="@+id/txtMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เงินสด"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/h3"/>

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Total"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/h2"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

</LinearLayout>